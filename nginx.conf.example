
# Nginx configuration for MLGG app
# This file should be placed in /etc/nginx/sites-available/mlgg on your VPS
# Then create a symlink: ln -s /etc/nginx/sites-available/mlgg /etc/nginx/sites-enabled/mlgg

upstream mlgg_upstream {
    # Docker container hostname (service name from docker-compose.yml)
    # If running on same host, this can be 'mlgg:3000'
    # If running on different host, use: 'your-docker-host-ip:3000'
    server mlgg:3021;

    # Optional: Add keepalive connections for better performance
    keepalive 32;
}

server {
    server_name mlgg.mavoid.com;  # Change this to your domain if needed (e.g., example.com)

    # Increase client body size for form uploads (adjust as needed)
    client_max_body_size 10M;

    # Gzip compression
    gzip on;
    gzip_types text/plain text/css application/json application/javascript text/xml application/xml application/xml+rss text/javascript;
    gzip_vary on;
    gzip_min_length 1000;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
    add_header X-XSS-Protection "1; mode=block" always;
    add_header Referrer-Policy "no-referrer-when-downgrade" always;

    # Rate limiting (optional - uncomment to enable)
    # limit_req_zone $binary_remote_addr zone=mlgg_limit:10m rate=10r/s;
    # limit_req zone=mlgg_limit burst=20 nodelay;

    # MIME types - ensure static assets are served with correct types
    types {
        text/html                             html htm;
        text/css                              css;
        application/javascript                js;
        application/json                      json;
        image/gif                             gif;
        image/jpeg                            jpg jpeg;
        image/png                             png;
        image/svg+xml                         svg svgz;
        image/webp                            webp;
        font/woff                             woff;
        font/woff2                            woff2;
        font/ttf                              ttf;
        font/otf                              otf;
        application/octet-stream              bin exe dll;
    }
    default_type application/octet-stream;

    # Static files - cache aggressively since Next.js uses content hashing
    location ~* ^/(_next|static)/ {
        proxy_pass http://mlgg_upstream;
        proxy_http_version 1.1;
        
        # Cache static assets for 1 year (they have content hashes in filenames)
        expires 365d;
        add_header Cache-Control "public, immutable";
        add_header X-Content-Type-Options "nosniff" always;
        
        # Headers
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }

    # MLGG application
    location / {
        # Proxy settings
        proxy_pass http://mlgg_upstream/;
        proxy_http_version 1.1;
        
        # Headers for proper proxying
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header X-Forwarded-Host $host;
        proxy_set_header X-Forwarded-Port $server_port;
        
        # WebSocket support (if needed in the future)
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";
        
        # Timeouts
        proxy_connect_timeout 60s;
        proxy_send_timeout 60s;
        proxy_read_timeout 60s;
        
        # Buffering
        proxy_buffering on;
        proxy_buffer_size 4k;
        proxy_buffers 8 4k;
        proxy_busy_buffers_size 8k;
        
        # Don't cache HTML pages
        expires -1;
        add_header Cache-Control "no-cache, no-store, must-revalidate";
    }

    # Deny access to hidden files
    location ~ /\. {
        deny all;
        access_log off;
        log_not_found off;
    }

    # Logging
    access_log /var/log/nginx/mlgg_access.log combined buffer=32k flush=5s;
    error_log /var/log/nginx/mlgg_error.log warn;

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/mlgg.mavoid.com/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/mlgg.mavoid.com/privkey.pem; # managed by Certbot
    include /etc/letsencrypt/options-ssl-nginx.conf; # managed by Certbot
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

